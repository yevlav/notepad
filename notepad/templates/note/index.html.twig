{% extends('base.html.twig') %}

{% block title %} Welcome to Notepad! {% endblock %}

{% block body %}    
    <table class="table table-light table-striped">        
        <thead class="thead-dark">            
            <tr>                
                <th>ID</th>               
                <th>Title</th>                
                <th>Content</th>            
            </tr>        
        </thead>        
        <tbody>            
            {% for note in notes %}                
            <tr>                    
                <td>{{ note.id }}</td>                    
                <td>{{ note.title }}</td>                    
                <td>{{ note.content }}</td>                
            </tr>            
            {% endfor %}        
        </tbody>   
    </table>
{% endblock %}